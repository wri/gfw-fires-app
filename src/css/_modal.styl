//- General modal styling

.modal-container
  position fixed
  z-index 1000
  height 100%
  width 100%
  left 0
  top 0

.modal-background
  background-color rgba(0, 0, 0, 0.35)
  height 100%
  width 100%

.modal-window
  transform translate(-50%, -50%)
  background-color white
  position fixed
  height auto
  left 50%
  top 50%
  width 500px
  min-height 100px
  -webkit-transform translate(-50%, -60%)
  -moz-transform translate(-50%, -60%)
  -ms-transform translate(-50%, -60%)
  -o-transform translate(-50%, -60%)
  transform translate(-50%, -60%)
  transition all 0s cubic-bezier(0.445, 0.05, 0.55, 0.95)
  background white
  border none
  box-shadow 0px 1px 2px rgba(0,0,0,0.25)

.modal-window:before, .modal-window:after
  content ""
  position absolute
  height 20px
  width calc(100% - 8px)
  left 0

.modal-window a
  word-break break-word
  word-wrap break-word
  text-decoration none

.modal-window:before
  top 0
  // background-image -webkit-linear-gradient(top, #fff, rgba(255,255,255,0))
  // background-image -moz-linear-gradient(top, #fff, rgba(255,255,255,0))
  // background-image -o-linear-gradient(top, #fff, rgba(255,255,255,0))
  // background-image -ms-linear-gradient(top, #fff, rgba(255,255,255,0))
  // background-image linear-gradient(top, #ffffff,rgba(255,255,255,0))

.close-icon
  position absolute
  height 40px
  width 40px
  right 0
  top 0

.modal .close-icon svg
  transform translate(-50%, -50%)
  position absolute
  height 50%
  width 50%
  left 50%
  top 50%

.modal-close
  display block
  position absolute
  top 0px
  right 0px
  width 40px
  height 40px
  z-index 20
  background-image url(../images/icon-close.svg)
  background-repeat no-repeat
  background-position center

