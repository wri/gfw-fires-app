// Imagery Modal specific styling
.imagery-modal-container
  display block

  &.collapse
    display none

  .map__viewfinder
    margin -8px 0 0 -8px
    pointer-events none
    position absolute
    fill #555
    height 16px
    width 16px
    z-index 4
    left 50%
    top 50%

.imagery-modal__wrapper
  width 500px
  height 285px
  -webkit-box-shadow 0 1px 3px rgba(85,85,85,0.25)
  box-shadow 0 1px 3px rgba(85,85,85,0.25)

  .flex
    display flex
    align-items center

  .fa-button.white
    border 1px solid #f0ab00

  select
    -webkit-appearance none
    position absolute
    height 100%
    width 100%
    opacity 0
    left 0
    top 0
    &:hover + div
      background darken(white, 10%)

.imagery-modal__title
  font-size 12px
  font-weight bold
  line-height 21px
  color #555
  text-transform uppercase
  margin 10px 20px 10px 20px

.imagery-modal__section
  padding 0px 20px 10px 20px
  font-size 11px
  color #999
  justify-content space-between

  &.filters
    position relative
    z-index 5

  &.secondary-filters
    align-items flex-start
    min-height 60px

  &.thumbnail_container
    width 100%
    max-height 102px
    overflow-y auto
    display flex
    justify-content flex-start
    flex-wrap wrap

  .thumbnail-text
    width 50%
    p
      color #555
      line-height 1.4
      margin 0

  .thumbnail
    width 88px
    height 88px
    overflow hidden
    margin 2px
    cursor pointer
    border transparent solid 4px;
    background #999
    display flex

    &.disabled
      cursor default

      .garbage
        width 100%
        display flex
        justify-content center
        align-items center
        
        svg
          height 20px
          width 20px
          fill #c1c1c1

      &:hover
        border transparent solid 4px;
    .svg-icon
      fill #c1c1c1

    img
      width 85px
      height auto

    &:hover
      border #555 solid 4px;

    &.selected
      border #e7002f solid 4px;

.imagery-modal__error
  display flex
  align-items center
  flex-direction column
  width 100%

hr
  margin 8px 0px 8px 0px
  border $lightGrayBorder 0.5px solid

.imagery-modal_section-title
  text-transform uppercase
  font-weight bold
  margin-bottom 10px

.imagery-modal_section-text
  margin 0 10px

@media (max-width: 600px)

  .imagery-modal-container
    &.collapse
      display none

      .imagery-modal__wrapper
        height 0px
        transition all 1s

  .imagery-modal__wrapper
    width 100vw
    height 400px
    transition all 1s

    .imagery-modal__section
      flex-wrap wrap
      justify-content space-between

      &.thumbnail_container
        width 100%
        max-height 150px

      .imagery-modal__item
        margin 0 0 15 0
        min-width 80vw
