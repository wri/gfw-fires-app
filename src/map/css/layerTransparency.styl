.layer-transparency
  margin 0 5%
  width 90%
  padding-top 15px

  input[type='range']
    -webkit-appearance none
    width 100%
    margin 7px 0
  input[type=range]:focus
    outline none
  input[type=range]::-webkit-slider-runnable-track
    width 100%
    height 2px
    cursor pointer
    box-shadow none
    background $lightGray
    border-radius 0px
    border 0px solid $darkGray
  input[type=range]::-webkit-slider-thumb
    box-shadow none
    border 1px solid $lightGray
    height 16px
    width 16px
    border-radius 3px
    background #fff url(images/dot.svg) no-repeat 50% 50%;;
    cursor pointer
    -webkit-appearance none
    margin-top -7px
  input[type=range]:focus::-webkit-slider-runnable-track
    background #b7b7b7

  input[type=range]::-moz-range-track
    width 100%
    height 2px
    cursor pointer
    box-shadow 1px 1px 1px #ffffff, 0px 0px 1px #ffffff
    background #aaaaaa
    border-radius 0px
    border 0px solid #010101
  input[type=range]::-moz-range-thumb
    box-shadow 0px 0px 0px #000000, 0px 0px 0px #0d0d0d
    border 1px solid #dddddd
    height 20px
    width 20px
    border-radius 3px
    background #fff url(images/dot.svg) no-repeat 50% 50%
    cursor pointer

  input[type=range]::-ms-track
    width 100%
    height 2px
    cursor pointer
    background transparent
    border-color transparent
    color: transparent;
  input[type=range]::-ms-fill-lower
    background #9d9d9d
    border 0px solid #010101
    border-radius 0px
    box-shadow 1px 1px 1px #ffffff, 0px 0px 1px #ffffff
  input[type=range]::-ms-fill-upper
    background #aaa
    border 0px solid #010101
    border-radius 0px
    box-shadow 1px 1px 1px #ffffff, 0px 0px 1px #ffffff
  input[type=range]::-ms-thumb
    box-shadow 0px 0px 0px #000000, 0px 0px 0px #0d0d0d
    border 1px solid #dddddd
    height 20px
    width 20px
    border-radius 3px
    background #fff url(images/dot.svg) no-repeat 50% 50%;
    cursor pointer
    height 2px
  input[type=range]:focus::-ms-fill-lower
    background #aaa
  input[type=range]:focus::-ms-fill-upper
    background #b7b7b7

  div
    color $lightGray
    font-size 0.75em
    text-align center
    position absolute
    width 150px
    left calc(50% - 75px)
    margin-top -12px
