.modal-container
  position absolute
  z-index 1000
  height 100%
  width 100%
  left 0
  top 0

.modal-background
  background-color rgba(0, 0, 0, 0.35)
  height 100%
  width 100%

.calendar-background
  background-color rgba(0, 0, 0, 0)
  height 100%
  width 100%

.modal-window
  transform translate(-50%, -50%)
  background-color white
  position fixed
  height auto
  left 50%
  top 50%
  width 500px
  min-height 100px
  -webkit-transform translate(-50%, -60%)
  -moz-transform translate(-50%, -60%)
  -ms-transform translate(-50%, -60%)
  -o-transform translate(-50%, -60%)
  transform translate(-50%, -60%)
  transition all 0s cubic-bezier(0.445, 0.05, 0.55, 0.95)
  background white
  border none
  box-shadow 0px 1px 2px rgba(0,0,0,0.25)
  &.narrow
    width calc(100% - 37px)
    left calc(50% + 2px)
    top 60%
    max-height 440px

.modal-window:before, .modal-window:after
  content ""
  position absolute
  height 20px
  width calc(100% - 8px)
  left 0

.modal-window a
  word-break break-word
  word-wrap break-word
  text-decoration none

.modal-window:before
  top 0
  background-image -webkit-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image -moz-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image -o-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image -ms-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image linear-gradient(to-top, #ffffff,rgba(255,255,255,0))

.calendar-window
  transform translate(-50%, -50%)
  background-color white
  position fixed
  height auto
  left 500px
  top 310px
  width 340px
  min-height 100px
  -webkit-transform translate(-50%, -60%)
  -moz-transform translate(-50%, -60%)
  -ms-transform translate(-50%, -60%)
  -o-transform translate(-50%, -60%)
  transform translate(-50%, -60%)
  transition all 0s cubic-bezier(0.445, 0.05, 0.55, 0.95)
  background white
  border none
  box-shadow 0px 1px 2px rgba(0,0,0,0.25)
  &.narrow
    left 50%
    top 50%


.calendar-window:before, .calendar-window:after
