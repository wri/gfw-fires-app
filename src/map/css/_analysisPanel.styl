// Loaded inline in html, image basepath is css/images/*.{jpg|png|svg}
.search-tools
  width 500px
  // right 20px
  z-index 6
  // top 300px
  left 0px
  right 0px
  margin 0 auto
  filter drop-shadow(2px 2px 2px rgba(0, 0, 0, .25)) // $box-shadow
  &.isSearchMobile
    width 80%
    .search-tab-container
      background-color #c9c9c9
      width 100%
    & .search-tab
      width 32%
      padding-left 0
      padding-right 0
    & .search-box
      width 100%
      display block
    & .deg-box
      display block
      & input.deg-input
        max-width 160px
    & .search-submit-button
      margin 5px
    & .search-coordinates
      display block
      width 100%
      & div
        width 22%
    & #coordinateSearch
      position relative
      float inherit
      width inherit


  +below($mq-mobile)
    width auto
    top 20px
    bottom initial
    left 20px
    right 1em
    z-index 800 // $z-modal

  // & .search-submit-button
  //   color #FFF
  //   border-radius 0

  & .search-tab
    color white
    background-color #c9c9c9
    border none
    font-size .75em
    margin-left 3px
    height 26px
    padding 5px 15px 2px 15px
    display inline-block
    transition all 0.2s cubic-bezier(0.645, 0.045, 0.355, 1)
    outline none

    &.active
    &:active
      color #c9c9c9
      background-color white

    // &:active
    // &:hover
    // &:focus
    //   color #e7002f // $gfw-red

    &:nth-child(1)
      margin-left 0

    &:nth-child(3)
      margin-right 0

  & .search-magnifier
    height 17px
    width 17px
    fill #555

  & .search-input-container
    display flex
    flex-direction row

  & .search-input
    outline none
    border none
    box-sizing border-box
    height 100%
    padding 10px

  & .search-results
    width 100%
    max-height 225px
    overflow auto
    position absolute
    background-color rgba(255, 255, 255, .8)

    & button
      width 100%
      text-align left
      background none
      border none
      border-bottom 1px solid #CCC

  & .search-coordinates
    display inline-block
    // width 100%
    width calc(100% - 100px)
    justify-content space-between
    align-items center
    div
      display inline-block
      width 25%

    & input
      width 3em
      padding-right 0

    & select
      margin-right 10px
      background #555
      color white
      width 60px
      height 30px

  & .search-button
    float right
    position absolute
    right -80px
    width 80px
    top 25px

.search-box.degrees
  background white
  display flex
  display -webkit-flex
  -webkit-box-pack justify
  -moz-box-pack justify
  -ms-flex-pack justify
  -webkit-justify-content space-between
  justify-content space-between
  align-items center
  -webkit-align-items center
  padding 0 10px

.deg-box
  display flex
  display -webkit-flex
  -webkit-box-pack justify
  -moz-box-pack justify
  -ms-flex-pack justify
  -webkit-justify-content space-between
  justify-content space-between
  align-items center
  -webkit-align-items center

.deg-box span
  width auto

.deg-box input.deg-input
  max-width 120px
  text-align left
  margin 13px 0 9px 5px
  padding 0
  text-align left
  outline 0
  border none
  border-bottom 1px solid #555555
  font-size 18px
  border-radius 0
  font-family inherit

.deg-box .gfw-btn
  background #e5e5df
  position relative
  display inline-block
  z-index 1
  padding 0px 12px
  border-radius 40px
  font-size 14px
  text-decoration none
  height 36px
  line-height 36px
  text-align center
  font-weight 500
  white-space nowrap
  -webkit-transition background 0.15s linear
  -moz-transition background 0.15s linear
  -o-transition background 0.15s linear
  transition background 0.15s linear

.search-submit-button.gfw-btn.green:hover
  background #ad0023
  text-decoration none !important

.search-submit-button.gfw-btn.green
  color white
  background #e7002f

.deg-box
  button
    width auto
    margin 0 0 0 10px

#coordinateSearch
  position absolute
  right 0px
  // top 26px
  // top 0
  bottom 0
  background white
  height calc(100% - 26px)
  padding-top 25px
  float right
  width 100px
  button
    margin-right 15px

.analysis-tools
  max-height calc(100% - 255px)
  flex-direction column
  // overflow hidden
  display flex
  width 450px
  right 40px
  top 110px
  &.isMobileTools
    max-height calc(100% - 125px)
  +below($mq-mobile)
    top initial
    bottom 110px
    left 20px
    right 1em
    z-index 800 //$z-modal
    width auto
  & .no-shrink
    flex-shrink 0
  & .tab-container
    overflow-y auto
    p
      text-align left
      margin 0.25rem 0
      padding 10px 20px
      font-size 13px
  & > div
    background white
    width 100%
  .analysis__title
    margin: 1em 0 0.25em 0;
  .country-report__title
  .indonesia-report__title
    margin: 1em 0 0 0;

.reports-container
  display flex
  flex-direction row

.report-width
  width 50% !important

.analysis-toggle
  cursor pointer

.analysis-tools .tabs .gfw-btn
.analysis-footer > div
  font-size 14px
  width 25%

.analysis-footer
  padding .5em .5em 1em .5em

.analysis-footer button
  font-size 14px

  & svg
    fill $darkGray
    margin 0 5px
    height 20px
    width 20px
  & > div
    border-top 1px solid $lightGrayBorder
    transition background 0.25s linear
    justify-content center
    text-align center
    line-height 20px
    padding 7px 10px
    color $darkGray
    &:first-child
      border-right 1px solid $lightGrayBorder
  & .analysis-action-label
    line-height 22px
    &:hover
      background darken(white, 10%)

.analysis-tools
  .tabs
    svg
      height 20px
      width 20px
      fill #555
      vertical-align middle

    .active svg
      fill $gfwBlue

.analysis-tools .tabs .gfw-btn
  //$lightGrayBorder is slightly ligher then $lightGray, making it better fit for unactive tab
  // transition color 0.35s ease-in-out
  background-color #EEEEEE
  color $darkGray
  border-radius 0
  &.active
    color $gfwBlue
    background-color white
  &:hover
    background-color white
