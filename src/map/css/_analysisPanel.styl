.analyze-header
  justify-content center
  align-items center
  color $gfwBlue
  display flex
  height 40px

  & svg
    margin-right 10px
    height 20px
    width 20px
    fill $gfwBlue

.lat-lng-tool
  & .lat-lng-form
    justify-content center
    margin 10px 0
  & input
    border 1px solid $lightGrayBorder
    padding 5px 10px
    font-size 13px
    margin 0 5px
    outline none
    width 90px

.lat-lng-btn
  margin 0 5px

.add-point-btn
  margin 20px auto 10px
  width 120px
  &.active
    background darken($gfwBlue, 25%)

.chosen-container-multi .chosen-choices li.search-choice .search-choice-close, .chosen-container .chosen-results-scroll-up span
  background url('../css/images/chosen-sprite.png') -42px 1px no-repeat !important

#provinces_chosen
  .chosen-choices
    max-height 125px
    overflow-x hidden
    overflow-y auto

.custom-analysis-spacer
  margin 5px 0

.lat-lng-instructions
  font-size 14px

.analysis-placeholder
  text-align center
  background white
  font-size 16px
  padding 30px
  margin 0

.loss-footnote
  justify-content center
  align-items center
  font-size 11px
  & .loss-footnote-label
    padding-right 3px

.loss-link
  & select
    -webkit-appearance none
    position absolute
    height 100%
    width 100%
    opacity 0
    left 0
    top 0
  & .loss-timeline-spacer
    padding 0 3px

.canopy-link
  & .canopy-text
    padding 0 3px
  & .canopy-density-label:before
    content ' > '
  & .canopy-density-label:after
    content '% '

.custom-analysis-link
  justify-content center
  margin 5px 0 10px
  font-size 12px
  & .custom-analysis-link-label
    padding-right 3px

.full-report-button
  margin 5px auto 10px
  width 180px

.imagery-tab, #areaTab
  padding 20px

.imagery-calendar-label, .customize-report-label
  display block
  font-size 11px !important
  color #999
  text-transform uppercase
  padding 7px 0
  position relative
  text-align left
  font-size 11px

.customize-report-label
  cursor pointer
  padding-left 40px !important

.customize-options span
  font-size 14px

#imagery-date-ranges button, #analysis-date-ranges button, #areaTab button
  width 100%

#imagery-date-ranges button, #analysis-date-ranges button
  font-size 14px

.drop-shapefile
  border 1px dashed gray

.subscribe-link
  color #e7002f
  cursor pointer

.subscription-draw
  font-size 14px

.feature-title
.custom-area-title
  padding 0 10px
  margin 5px 0

.feature-title
  padding-top 3px

.watershed-chart
  margin 0 10px
  height 150px
  width 300px
  padding 0

.custom-area-title
  & input
    -webkit-appearance none
    padding-left 30px
    font-size 16px
    outline none
    border none
  & .custom-area-title-edit
    position absolute
    height 18px
    left 15px
    top 1px
    & svg
      fill $gfwBlue
      height 18px
      width 18px



.analysis-panel
  padding 5px

.analysis-instructions
.analysis-instructions__draw
  color $grayFont

.analysis-instructions__header
  font-weight normal
  margin 5px 0

.analysis-instructions__olist
  list-style-type decimal
  font-size 13px
  padding 0 15px

.analysis-instructions__separator
  margin 10px 0 5px
  text-align center
  font-size 22px

.analysis-instructions__draw-icon-container
  margin 10px 0

.analysis-instructions__draw-icon
  fill #e7002f
  display block
  margin auto
  height 100px
  width 135px
  margin-bottom 15px

.analysis-instructions__draw-button
  text-transform uppercase
  font-weight bold
  margin 15px

.analysis-instructions__upload-container
  // background-color $lightGrayHighlight
  border 1px dashed $lightGray
  // border-radius 10px
  position relative
  text-align center
  margin 15px 15px
  font-size 20px
  padding 10px
  cursor copy
  &.active
    font-weight bold
  & input
    display none

.analysis-instructions__upload
  pointer-events none

.analysis-results
  color $grayFont

.analysis-results__title
  border-bottom 1px solid $lightGray
  font-weight normal
  padding 0
  margin 0

.analysis-results__select-label
  font-size 14px
  margin 5px 0
  color black

.analysis-results__select-style
  border 1px solid $lightGray
  text-overflow ellipsis
  white-space nowrap
  padding-right 15px
  padding-left 5px
  line-height 2em
  overflow hidden
  font-size 13px
  color black
  height 2em
  width 100%

.analysis-results__select-style:after
  position absolute
  content '\25BC'
  font-size 10px
  right 5px
  top 2px

.analysis-results__select
  -webkit-appearance none
  position absolute
  height 100%
  width 100%
  opacity 0
  left 0
  top 0

.locate-me
  background-color white
  padding-top 10px
  padding-left 10px
  padding-right 10px
  &.mobs
    padding-top 2px

.border-right
  border-right 1px solid #aaa

.basemap-holder
  overflow auto

.subscription-field-container
  border 1px solid #aaa
  margin-top 5px

.subscription-field-select
  border-top 1px solid #aaa

.generated-field-row
  // border-bottom 1px solid #aaa
  cursor pointer

.upload-fields-toggle
  cursor pointer

