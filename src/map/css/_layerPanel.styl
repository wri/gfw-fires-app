// Loaded inline in html, image basepath is css/images/*.{jpg|png|svg}
.layer-panel
	max-height calc(100% - 130px)
	background white
	overflow-y auto
	width 280px
	left 20px
	top 110px

	/* IE10+ CSS styles go here */
	@media all and (-ms-high-contrast: none), (-ms-high-contrast: active)
		max-height 65%

	+below($mq-mobile)
		position fixed
		width auto
		top 20px
		bottom 110px
		left 20px
		right 1em
		z-index 800 //$z-modal
		max-height initial

.layer-category
	margin 10px

.layer-category-label
	border-bottom 1px solid $gfwBlue
	text-transform uppercase
	font-weight 500
	font-size 15px
	color $gfwBlue
	padding 5px 0

.layer-category-content
	margin-left 10px

.layer-category-caret
	margin-right 2px
	line-height 25px
	font-size 9px
	float right
	&.red
		color $gfwBlue
		cursor pointer
		font-size 12px

.active-layer-count
	margin-left 5px
	font-size 12px

.layer-group-label
	text-transform uppercase
	font-weight 500
	font-size 14px
	margin 10px 0

.layer-panel .layer-content-container
	margin 0 30px
	margin-right 0

.layer-panel-indent
	padding-left 20px

#windLegendNode
	margin 10px auto
	height 13px
	width 80%

.windLayerLegendColorRamp
	background linear-gradient(to right, rgba(0,255,255,0.5) 0%, rgba(255,30,219,0.5) 100%)

#windLegendLabels
	margin 0 25px
	font-size 10px

.rightWindLabel
	float right

//- Legends
.water-stress-legend
.major-dams-legend
.land-cover-legend
.fire-risk-legend
.last-rain-legend
.air-quality-legend
.forestry-legend
.sediment-legend
	justify-content center
	flex-wrap wrap
	display flex
	margin 5px 0
	& .legend-label
		font-size 12px
		padding 0 5px
		padding-top 1px
	& .legend-row
		margin 5px 0
		display flex
		width 100%

.plantations-legend-container-type .land-cover-legend .legend-row
	margin 5px 0
	line-height 1

.water-stress-legend .no-data-labels div:nth-child(2)
.water-stress-legend .no-data-labels img:nth-child(4)
	order 1

.major-dams-legend
.land-cover-legend
.air-quality-legend
	& .legend-row
		align-items center
		margin 1px 0
		display flex
		height 16px
		width 100%
	& .legend-label
		width 80%
	& .img
		width 20%

.air-quality-legend
	& .legend-row
		height 25px
		img
			height 15px
			width 15px

	& .legend-label
		padding 0 1px
		margin-left 10px
		line-height 15px

.canopy-label
.canopy-button
	font-size 10px

.tree-cover-canopy-display
	line-height 11px
	margin 5px 0

.canopy-button
	box-shadow 0 0 0 2px $gfwBlue
	display inline-block
	background $gfwBlue
	border-radius 10px
	padding 0px 4px
	margin 0 5px
	color white
	&:before
		content ' > '
	&:after
		content '% '

.fires-confidence
	color $gfwBlue
	cursor pointer

.fires-confidence-wrapper
	padding-left 5px
	font-size 11px
	vertical-align middle

#archive-date-ranges .gfw-btn, #noaa-date-ranges .gfw-btn, #risk-date-ranges .gfw-btn, #rain-date-ranges .gfw-btn,  #wind-date-ranges .gfw-btn, #air-date-ranges .gfw-btn
	font-size 10px

#archive-date-ranges button, #noaa-date-ranges button, #risk-date-ranges button, #rain-date-ranges button, #wind-date-ranges button, #air-date-ranges button
	width 100%

//- Timelines
.timeline-container
	margin 10px 0
	&.analysisLegend
		padding-left 20px
		padding-right 20px
	&.flex
		align-items center
	&.plantations
		width 185px
		margin-bottom 10px
	&.fires
		width 125px
	&.fires-history
		width 120px
	& select
		-webkit-appearance none
		position absolute
		height 100%
		width 100%
		opacity 0
		left 0
		top 0
		&:hover + div
			background darken(white, 10%)

.loss-timeline-spacer
	font-size 12px
	padding 0 8px

.active-plantations-control
	margin-bottom 10px

//- The classes below are the layer ids, if those layer ids are changed in the config, they will need
//- to be updated here as well so that the correct colors are applied to the layer checkbox
.layer-checkbox
	padding-bottom 3px
	margin-top 3px
	&.disabled
		& .layer-checkbox-label
			color $disabledFont
		& .info-icon
			background $disabledBackground
	&.active
		& > .toggle-switch
			background $gfwBlue
		& > .toggle-switch span
			left 9px
		&.loss .toggle-switch
			background $treeCoverLoss
		&.gain .toggle-switch
			background $treeCoverGain
		&.active-fires .toggle-switch
			background $activeFires
		&.viirs-fires .toggle-switch
			background $viirsFires
		&.archive-fires .toggle-switch
			background $historicLoss
		&.noaa-fires .toggle-switch
			background $noaaFires
		&.burn-scars .toggle-switch
			background $burnScars
		&.tree-cover .toggle-switch
			background $treeCoverDensity
		&.forest-moratorium .toggle-switch
			background $moratorium
		&.oil-palm .toggle-switch
			background $oilPalm
		&.rspo-palm .toggle-switch
			background $rspoOilPalm
		&.wood-fiber .toggle-switch
			background $woodFiber
		&.logging-concessions .toggle-switch
			background $loggingConcessions

		&.oil-palm-greenpeace .toggle-switch
			background $oilPalmGreenpeace
		&.wood-fiber-greenpeace .toggle-switch
			background $woodFiberGreenpeace
		&.logging-concessions-greenpeace .toggle-switch
			background $loggingGreenpeace
		&.coal-concessions-greenpeace .toggle-switch
			background $coalConcessions
		&.protected-areas .toggle-switch
			background $protectedAreas
		&.peatlands .toggle-switch
			background $peatlands
		&.logging-concessions .toggle-switch
			background $loggingConcessions
		&.primary-forests .toggle-switch
			background $primaryForests
		&.logging-concessions .toggle-switch
			background $managedForest
		&.fire-stories .toggle-switch
			background $fireStories
		&.twitter .toggle-switch
			background $twitter
		// &.air-quality .toggle-switch
		//   background $airQuality
	&.indented
		margin-left 35px
	&.exclusive
		margin-left 15px

.layer-checkbox-label
	padding-left 10px
	font-size 13px

.layer-checkbox-sublabel
	padding 0 25px 0 35px
	color $lightGray
	line-height 12px
	font-size 11px

.toggle-switch
	transition all 0.3s ease
	background $lightGray
	display inline-block
	border-radius 5px
	position relative
	height 10px
	width 17px

.toggle-switch span
	transition all 0.3s ease
	border-radius 50%
	position absolute
	background white
	height 6px
	width 6px
	left 2px
	top 2px

.layer-info
	background-color $gfwBlue
	display inline-block
	position absolute
	border-radius 50%
	height 14px
	width 14px
	right 10px
	top 4px

.layer-info svg
	position absolute
	margin auto
	fill white
	height 8px
	width 8px
	bottom 0
	right 0
	left 0
	top 0




#fireWeatherLegend, #lastRainLegend
	width 90px
	font-size 11px
	display inline-block
	padding-left 5px
	margin-left 30px
	margin-top -6px

.fireWeatherLegendData
	line-height 2em
	display inline-block

.lastRainLegendData, .fireHistoryLegendData
	margin-top 7px
	display block
	min-height 35px
	min-width 15px

.fireHistoryLegendData
	margin-top 0px

#lastRainLegendDataColors, #fireHistoryLegendDataColors
	background-image url(images/rainfallLegend.png)
	height 99px
	background-size 23px
	width 23px
	margin-left -120px
	margin-top 5px
	margin-bottom 15px
	float right

#fireHistoryLegendDataColors
	background-image url(images/fireHistoryLegend.jpg)
	height 65px
	background-size 25px

.fireWeatherLegendDataColors, .lastRainLegendDataColors
	margin-left 23px
	display inline-block
	height 120px
	width 20px

#fireWeatherLegendDataColors
	background-image url(images/firesRiskLegend.png)
	height 100px
	background-size 23px
	width 23px
	margin-left -120px
	margin-top 5px
	margin-bottom 15px
	float right

#fireHistoryLegendDataColorsBottom, #lastRainLegendDataColorsBottom
	height 100px
	background-size 20px
	border 1px solid gray

#fireHistoryLegendDataColorsBottom
	height 75px
	background-size 20px
	border 1px solid gray

#lastRainLegendDataColorsBottom
	height 99px

#fireWeatherLegendNoData
	position absolute
	width 23px
	height 23px
	border 1px solid gray
	bottom -5px
	margin-left -1px

.history-timeline-player
	background url('images/play.svg') no-repeat center
	height 15px
	width 15px
	position absolute
	display block
	background-size 15px 15px
	right -30px
	cursor pointer
	top 4px

.history-timeline-player.playing
	background url('images/pause.svg') no-repeat center
	height 15px
	width 15px
	display inline-block
	background-size 15px 15px
	float right
	cursor pointer
	padding-top 7px

