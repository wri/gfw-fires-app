//--------------
// Report Header + Body
//--------------
@media screen and (min-width: 961px) {
  .report__header-content
  .report__body {
    width: 960px;
    margin: 0 auto;
  }

  .map-container {
    width 610px
  }

  #district-fires-map,
  #district-fires-map .map {
    width: 530px;
  }

  .pull-right {
    justify-content: flex-end;
  }

  .pull-left {
    justify-content: flex-start;
  }

  .report-section__map-container {
    padding: 0 0 1.25em 0;
  }

  .report__header-content {
    position: relative;
  }
}

@media screen and (max-width: 960px) {
  .report-section__map-container {
    flex-direction: column;
  }

  .map-container {
    margin: 0 1em;
  }

  .report-section__content {
    padding 1.5rem 1rem
  }

  .report-section__title,
  .fire-alert-count__subtitle {
    padding: 0 0 0 .5em;
  }

  .two-rows:empty {
    display: none
  }

  #ConcessionRspoContainer {
    flex-direction column
  }

  .report-section__map {
    order: -1;
  }

  .section-title {
    padding-left: .25em
  }

  .vertical-divider {
    display none
  }

  .fire-line-chart {
    width 100%
    height: 400px;
  }
}

@media (max-width: 650px) {

  .report-page {
    position fixed
    width 100vw
    height: 100vh
    overflow-x hidden
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
  }

  .report-page #disclaimer {
      width 85vw
      margin 1em auto 2em
  }

  .pie-chart-title {
    width: 100%;
    height: auto;
    justify-content center
  }

  .pie-chart-title br {
    display: none
  }

  #firesCountContainer #firesCountChart {
    width 100%
    height 350px
  }

  #firesCountContainer {
    flex-direction column
  }

  .map-container.map-legend .legend-container {
    position: absolute
    bottom 3px
    z-index 100
    color: #fff
  }

}

@media screen and (min-width: 651px) {
  .indicative-moratorium-area {
    width: 210px;
    left -30px;
  }
}

@media screen and (min-width: 501px) {
  .gfw-fires-logo__link {
    position: relative;
    top: 1em;
  }

  .gfw-fires-logo__image {
    width: 70px !important
    height: 70px !important
  }
}

@media screen and (max-width: 500px) {
  .report-title__container {
    align-items: initial;
    flex-direction: column;
    padding: 0 0.5em;
  }

  #totalFireAlerts {
    line-height: 1em;
  }

  .report-title__container .report-date-range__container {
    padding: 0 0 3px 0;
  }
}

