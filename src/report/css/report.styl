.report-page
  font-family: 'Fira Sans', Georgia, serif

//--------------
// Report Header
//--------------
.report__header-content {
  display flex
  padding-left: .75em
}

.report__header {
  height: 60px;
  background-color: #555;
  display: flex;
  position relative
}

.share-link {
  position: absolute;
  bottom: 0;
  right: 0;
  padding-right: 2em;
  line-height: 2rem;
  height: 2rem;
  color: #fff;
  text-decoration: none;
  background: url(images/icon-share.svg);
  background-repeat: no-repeat;
  background-position: center right .5em;
  font-size: 15px;
  opacity: 0.8;
  transition: opacity 0.3s linear;
  cursor pointer

  &:hover {
    opacity: 1;
  }
}

.share-link-input__container {
  padding: 10px 12px
  background-color #555555
  position: absolute;
  bottom: -50px;
  height: 50px;
  right: 0;
  box-sizing: border-box;

  &.hidden {
    display: none
  }
}

input.share-link-input {
  height: 30px;
  padding: 5px 6px;
  font-size: 14px;
  box-sizing: border-box;
}

.report-title__container
  display: flex
  align-items: baseline;
  color: #fff
  padding 1.1em 0.5em 0.25em 0.5em

  .selected-country
    padding-left: 0.2em;

  .report-title
    font-weight 300
    font-size 2rem
    margin: 0

  .report-date-range__container {
    padding-left: .5em;
    font-size: 1.15em;
  }

.report-date-range__map-container {
  display: inline-block;
  font-size: 1rem
}

#aoiList {
  font-weight: normal;
  margin: .5em 0;
  padding: .5em 0;
  line-height: 1.5em
  min-height 1.5em
  font-size: 1em
}

.border-top-separator
  border-top: 1px solid #ffcecb;
  padding-top: .25em
  margin-top: .25em

.num-of-fires__container {
  margin-bottom: 1em;
  text-align center
}

.num-of-fires__content {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.15em
  height 90px
}

//--------------
// Report body
//--------------
