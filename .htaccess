RewriteEngine on

RewriteCond %{REQUEST_URI} fires-staging.globalforestwatch.org/
Redirect ^(.*)$ https://fires-staging.globalforestwatch.org/home/

RewriteCond %{REQUEST_URI} fires-staging.globalforestwatch.org/about/
Redirect ^(.*)$ https://fires-staging.globalforestwatch.org/about/

RewriteCond %{REQUEST_URI} fires.globalforestwatch.org/
Redirect ^(.*)$ https://fires.globalforestwatch.org/home/

# HTTP -> HTTPS
RewriteCond %{HTTPS} !on
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}

# Enable Compression
SetOutputFilter DEFLATE

# Set Cache-Control to 2 weeks for most resources, 3 months for images, and 60 seconds after access for html
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault M1209600
  ExpiresByType text/html A60
  ExpiresByType image/gif A8035200
  ExpiresByType image/jpeg A8035200
  ExpiresByType image/png A8035200
  ExpiresByType text/css M1209600
  ExpiresByType text/javascript M1209600
  ExpiresByType application/x-javascript M1209600
</IfModule>
