RewriteEngine on

RewriteCond %{HTTP_HOST} ^fires-staging.globalforestwatch\.org [NC]
RewriteCond %{SERVER_PORT} 80 
RewriteRule ^(.*)$ https://www.fires-staging.globalforestwatch.org/$1 [R,L]

RewriteCond %{HTTP_HOST} ^fires.globalforestwatch\.org [NC]
RewriteCond %{SERVER_PORT} 80 
RewriteRule ^(.*)$ https://www.fires.globalforestwatch.org/$1 [R,L]

# RewriteCond %{REQUEST_URI} http://fires-staging.globalforestwatch.org/index.html
# RewriteRule https://fires-staging.globalforestwatch.org/home/

Redirect /index.html /home
Redirect /index.php /home

# Redirect http://fires-staging.globalforestwatch.org/index.html https://fires-staging.globalforestwatch.org/home/
# Redirect https://fires-staging.globalforestwatch.org/index.html https://fires-staging.globalforestwatch.org/home/

# Redirect http://fires-staging.globalforestwatch.org/index.php https://fires-staging.globalforestwatch.org/home/
# Redirect https://fires-staging.globalforestwatch.org/index.php https://fires-staging.globalforestwatch.org/home/

# RewriteCond %{HTTPS} on
